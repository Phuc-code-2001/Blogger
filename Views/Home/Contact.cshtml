@{
    ViewData["Title"] = "Contact Page";
}

<link rel="stylesheet" href="~/css/home/Contact.css">

<section class="contact">

    <div class="banner">
        <p class="banner_path">Home &#8594; Contact &#8594;</p>
        <h1 class="banner_main_text">Contact.</h1>
    </div>

    <div class="contact_main">
        <div class="map_container">
            <iframe src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJdwpyOSGIoDERZFq50CeiFjk&key=AIzaSyDCfhtIVVFc8xU6l45rDTDxKUa8X3JSk3k"
            width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen>
        </iframe>
        </div>
            <div class="form_container">
                <h4 class="form_name">Contact Us</h4>
                <p class="help_text">We're open for any suggestion or just to have a chat</p>
                <div class="form_info">
                    <div class="form_info_item">
                        <b class="field_name">
                            <ion-icon class="text-info" name="map-outline"></ion-icon>
                            <span>Address</span>
                        </b>
                        <p class="help_text">198 West 21th Street, Suite 721 New York NY 10016</p>
                    </div>
                    <div class="form_info_item">
                        <b class="field_name">
                            <ion-icon class="text-info" name="mail-outline"></ion-icon>
                            <span>Email</span>
                        </b>
                        <p>info@yoursite.com</p>
                    </div>
                    <div class="form_info_item">
                        <b class="field_name">
                            <ion-icon class="text-info" name="call-outline"></ion-icon>
                            <span>Phone</span>
                        </b>
                        <p>+ 1235 2355 98</p>
                    </div>
                </div>
                <form action="" class="form">
                    <div class="form-control-group">
                        <input type="text" name="" id="" class="form_control" placeholder="Name" required>
                        <input type="email" name="" id="" class="form_control" placeholder="Email" required>
                    </div>
                    <input type="text" name="" id="" class="form_control" placeholder="Subject" required>
                    <textarea name="" id="" class="form_control" cols="30" rows="5" placeholder="Create a message here" required></textarea>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary" id="send-contact">Send</button>
                    </div>
                </form>

                <div class="form_footer">
                    <div class="message">Follow us here</div>
                    <br>
                    <div class="media_links">
                        <div class="two-item">

                            <a href="" class="icon_box text-decoration-none">
                                <ion-icon name="logo-facebook"></ion-icon>
                                <span class="px-2">Facebook</span>
                            </a>
                            <a href="" class="icon_box text-decoration-none">
                                <ion-icon name="logo-twitter"></ion-icon>
                                <span class="px-2">Twitter</span>
                            </a>
                        </div>
                        <div class="two-item">

                            <a href="" class="icon_box text-decoration-none">
                                <ion-icon name="logo-instagram"></ion-icon>
                                <span class="px-2">Instagram</span>
                            </a>
                            <a href="" class="icon_box text-decoration-none">
                                <ion-icon name="logo-dribbble"></ion-icon>
                                <span class="px-2">Dribble</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <div class="contact_footer">
        <div class="footer_item" style="flex: 1;">
            <h5 class="footer_item_title">Blogger</h5>
            <p class="pr-3 help_text">
                A small river named Duden flows by their place and supplies it with the necessary regelialia.
            </p>
        </div>
        <div class="footer_item">
            <h6 class="footer_item_title">EXPLORE</h6>
            <ul class="footer_item_list">
                <li>
                    <a asp-action="Index" class="help_text">&#8594; Home</a>
                </li>
                <li>
                    <a asp-action="About" class="help_text">&#8594; About</a>
                </li>
                <li>
                    <a asp-controller="Blog" asp-action="Index" class="help_text">&#8594; Blog</a>
                </li>
            </ul>
        </div>
        <div class="footer_item" style="flex: 1;">
            <h6 class="footer_item_title">RECENT POSTS</h6>
            <ul class="footer_item_list">
                @if(ViewBag.RecentPosts != null) {
                    foreach(Blog item in ViewBag.RecentPosts) {
                        String title = item.Title ?? "No Title";
                        <li>
                            <div class="mini_blog">
                                <div class="img_box">
                                    <img src="@item.ImageURL" alt="img">
                                </div>
                                <div class="content">
                                    <div class="info">
                                        <span class="help_text date">
                                            <ion-icon name="calendar-outline"></ion-icon>
                                            @item.DateTimeOfPublic.ToShortDateString()
                                        </span>
                                        <span class="help_text author">
                                            <ion-icon name="person-outline"></ion-icon>
                                            @item.AuthorUserName
                                        </span>
                                    </div>
                                    <div class="title">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-blog_id="@item.Id">@title</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                }
                else {
                    <li>
                        <p class="text-primary">No have any post.</p>
                    </li>
                }
            </ul>
        </div>
        <div class="footer_item" style="flex: 1;">
            <h6 class="footer_item_title">HAVE A QUESTIONS?</h6>
            <ul class="footer_item_list">
                <li>
                    <ion-icon name="home-outline"></ion-icon>
                    203 Fake St. Mountain View, San Francisco, California, USA
                </li>
                <li>
                    <ion-icon name="call-outline"></ion-icon>
                    +2 392 3929 210
                </li>
                <li>
                    <ion-icon name="paper-plane-outline"></ion-icon>
                    info@yourdomain.com
                </li>
            </ul>
        </div>
    </div>

</section>

@section Scripts {
    <script src="~/lib/sweetAlert2.js"></script>
    <script>
        $(document).ready(() => {
            $("#send-contact").click((e) => {
                e.preventDefault();

                Swal.fire({
                    title: 'Success!',
                    text: 'We have received your contact. Please wait for our response. Thank you!',
                    icon: 'success',
                    confirmButtonText: 'Ok'
                });

                $('.form .form_control').val(null);

            });
        });
    </script>
}