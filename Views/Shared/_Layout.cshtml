<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bloger</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header class="header">
        <div class="logo_box">
            <a asp-controller="Home" asp-action="Index" class="brand text-decoration-none">Bloger</a>
        </div>
        
        <ul class="navbar ml-auto">
            <li class="nav_item"><a asp-controller="Home" asp-action="Index" class="nav_link">Home</a></li>
            <li class="nav_item"><a asp-controller="Blog" asp-action="Index" class="nav_link">Blog</a></li>
            <li class="nav_item"><a asp-controller="Home" asp-action="About" class="nav_link">About</a></li>
            <li class="nav_item"><a asp-controller="Home" asp-action="Contact" class="nav_link">Contact</a></li>
        </ul>
        @if (User.Identity.IsAuthenticated) {
            <ul class="navbar ml-auto">
                <li class="nav_item">
                    <a asp-controller="Profile" asp-action="Index" asp-route-Username="@User.Identity.Name" class="nav_link login">@User.Identity.Name</a>
                </li>
                <li class="nav_item"><a asp-controller="Identity" asp-action="Logout" class="nav_link">Logout</a></li>
            </ul>
        }
        else {
            <ul class="navbar ml-auto">
                <li class="nav_item"><a asp-controller="Identity" asp-action="Login" class="nav_link login">Login</a></li>
                <li class="nav_item"><a asp-controller="Identity" asp-action="Register" class="nav_link">Sign Up</a></li>
            </ul>
        }
        <div class="icon_box" style="font-size: 10px;" role="dropdown_navbar">
            <ion-icon name="reorder-two-outline"></ion-icon>
        </div>
    </header>
    <main role="main" class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            &copy; 2022 - Blog - PhucHT
        </div>
    </footer>
    
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>