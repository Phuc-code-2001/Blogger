@model IEnumerable<Topic>


<div id="_slider" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        @for (int indicator = 0; indicator < Model.Count(); indicator++)
        {
            <li data-target="#_slider" data-slide-to="@indicator"></li>
        }
        
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        @{
            ViewData["currentIndex"] = 0;
            foreach (Topic item in Model)
            {   
                <partial name="_SlideItem" for="@item" view-data="ViewData"></partial>
                ViewData["currentIndex"] = 1 + (int) ViewData["currentIndex"];
            }
        }
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#_slider" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#_slider" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>